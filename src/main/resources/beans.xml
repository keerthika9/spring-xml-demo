<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <bean id = "actor" class = "com.stackroute.domain.Actor">
    <constructor-arg type="java.lang.String" index="0" value="keer"> </constructor-arg>
    <constructor-arg type="java.lang.String" index="1" value="female"> </constructor-arg>
    <constructor-arg  type="int" index="2" value="21"> </constructor-arg>
  </bean>

  <bean id = "actor1" class = "com.stackroute.domain.Actor">
    <constructor-arg type="java.lang.String" index="0" value="sruthi"> </constructor-arg>
    <constructor-arg type="java.lang.String" index="1" value="female"> </constructor-arg>
    <constructor-arg type="int" index="2" value="22"> </constructor-arg>
  </bean>

  <bean name="movie,movie1" class="com.stackroute.domain.Movie" scope="prototype">
    <constructor-arg  ref="actor"></constructor-arg>
  </bean>

</beans>
